#!/bin/sh
# Testsuite executor
set -x

check() {
    RET=$?
    if [ $RET -ne 0 ] ; then
        exit $RET
    fi
}

run_coverage() {
    coverage run --source . --append "$@"
}

coverate erase

run_coverage ./manage.py check
check

run_coverage ./manage.py migrate --noinput --traceback
check

if [ "$CI_SELENIUM" = 1 ] ; then
    # We retry Selenium tests to workaroud occasional failures
    # in connection to SauceLabs
    RETRIES=3
    RET=1
    while [ $RET -ne 0 -a $RETRIES -gt 0 ] ; do
        run_coverage ./manage.py test -v 2 -p test_selenium.py
        RET=$?
        RETRIES=$(($RETRIES - 1))
    done
    exit $RET
else
    run_coverage ./manage.py test -v 2
    check

    run_coverage ./setup.py build
    check

    INSTALL_DIR=`mktemp -d`
    run_coverage ./setup.py install --root="$INSTALL_DIR"
    check
    rm -rf "$INSTALL_DIR"

    run_coverage ./setup.py dist
    check
fi
